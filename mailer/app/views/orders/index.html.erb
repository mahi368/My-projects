<h1>Index</h1>
<table>
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Address</th>
		<th>Phone</th>
		<th>Message</th>
	</tr>
	<% @orders.each do |order| %>
	<tr>
		<td><%= order.name %></td>
		<td><%= order.email %></td>
		<td><%= order.address %></td>
		<td><%= order.phone %></td>
		<td><%= order.message %></td>
	</tr>
	<% end %>
</table>

<%= link_to "new order" , new_order_path %>